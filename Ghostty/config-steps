# download and install ghostty
brew install --cask ghostty

# create config file in HOME/.config/ghostty/config
# themes
theme = tokyonight_night

# font options
font-size = 15
font-family = "JetBrainsMono Nerd Font"
line-height = 1.3

# Transparency and vibrancy
background-blur-radius = 20
background-opacity = 0.85

# Cursor customization
cursor-shape = "underline"
cursor-blink = true

# Padding for breathing space
padding-x = 10
padding-y = 8

# behavior tweaks
mouse-hide-while-typing = true
window-decoration = true
hide-title-bar = false
scrollback-lines = 10000
audible-bell = false

# keybindings
keybind = "global:cmd+`=toggle_quick_terminal"
keybind = "global:cmd+d=split_horizontal"
keybind = "global:cmd+shift+d=split_vertical"
keybind = "global:cmd+w=close_pane"
keybind = "global:cmd+arrow_left=focus_left"
keybind = "global:cmd+arrow_right=focus_right"
keybind = "global:cmd+arrow_up=focus_up"
keybind = "global:cmd+arrow_down=focus_down"
keybind = "global:cmd+enter=toggle_fullscreen"

# Text rendering
ligatures = true
